# ========================================
# Sipzy - Environment Variables
# ========================================
# Copy this file to .env and fill in your values

# ========================================
# Docker Registry (for CI/CD)
# ========================================
DOCKER_REGISTRY=ztoumia
BACKEND_VERSION=latest
FRONTEND_VERSION=latest

# ========================================
# Database Configuration
# ========================================
POSTGRES_DB=sipzy
POSTGRES_USER=sipzy
POSTGRES_PASSWORD=sipzy123
POSTGRES_PORT=5432

# ========================================
# Backend Configuration
# ========================================
BACKEND_PORT=8080
SPRING_PROFILE=dev

# JWT Configuration
JWT_SECRET=changeme-this-is-a-secret-key-for-jwt-token-generation-min-256-bits
JWT_EXPIRATION=604800000

# JVM Options
JAVA_OPTS=-Xms256m -Xmx512m

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://frontend:3000

# ========================================
# Cloudinary Configuration (Optional)
# ========================================
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# ========================================
# Email Configuration (Optional)
# ========================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_SMTP_AUTH=false
MAIL_SMTP_STARTTLS=false

# ========================================
# Frontend Configuration
# ========================================
FRONTEND_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:8080

# ========================================
# pgAdmin (Development only)
# ========================================
PGADMIN_EMAIL=admin@sipzy.com
PGADMIN_PASSWORD=admin123
PGADMIN_PORT=5050
