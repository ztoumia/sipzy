# Frontend & Backoffice
NEXT_PUBLIC_API_URL=http://your_vps_ip:8080

# CORS (adjust with your domain)
CORS_ALLOWED_ORIGINS=http://your_vps_ip:3000,http://your_vps_ip:3001
